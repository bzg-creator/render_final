<!DOCTYPE html>
<html>
<head>
    <title>Edit Item</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Edit Item</h1>
        <%- include('partials/nav') %>
    </header>

    <div class="admin-container">
        <h2>Edit Item: <%= item.name_en %></h2>
        <form action="/admin/items/edit/<%= item._id %>" method="POST" class="admin-form">
            <input type="text" name="name_en" placeholder="Name (EN)" value="<%= item.name_en %>" required>
            <input type="text" name="name_kz" placeholder="Name (KZ)" value="<%= item.name_kz %>" required>
            <textarea name="description_en" placeholder="Description (EN)" required><%= item.description_en %></textarea>
            <textarea name="description_kz" placeholder="Description (KZ)" required><%= item.description_kz %></textarea>
            <input type="text" name="images" placeholder="Image URLs (comma-separated)" value="<%= item.images.join(',') %>" required>
            <div class="button-group">
                <button type="submit">Update Item</button>
                <a href="/admin/items" class="button">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>